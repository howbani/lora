<Window xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" 
        x:Class="LORA.ui.UIOverlappedIntervals"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LORA.ui"
        mc:Ignorable="d"
        Title="Intervals Visualizing" Height="300" Width="600">
    <StackPanel>

        <ScrollViewer  Margin="0,1,0,0" CanContentScroll="True" SnapsToDevicePixels="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" PanningMode="HorizontalOnly" DataContext="{Binding}">
            <StackPanel Name="stack_intervals" Orientation="Vertical">

            </StackPanel>
        </ScrollViewer>
        
    </StackPanel>
</Window>
